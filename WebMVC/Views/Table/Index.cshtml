@model IList<Table>

@{
    var storeId = ViewData["StoreId"];
}

<div class="mt-4 d-flex flex-column">
    <div class="row">
        <div class="col-6">
            <h4>Gerenciar mesas</h4>
        </div>
        <div class="col-6 d-flex justify-content-end">
            <a class="btn btn-primary me-2" asp-controller="Store" asp-action="Details" asp-route-id="@storeId">Voltar</a>
            <a class="btn btn-primary" asp-controller="Table" asp-action="Create" asp-route-id="@storeId">Adicionar nova mesa</a>
        </div>
    </div>

    <hr />

    <div class="mt-2">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Identificador
                    </th>
                    <th>
                        Número de assentos
                    </th>
                    <th>
                        Mesa disponível
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr id="tr-table-@item.Id">
                        <td>
                            @Html.DisplayFor(modelItem => item.Number)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SeatsNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DisponivelGrid)
                        </td>
                        <td class="d-flex gap-2">
                            <button class="btn btn-primary" asp-controller="Table" asp-action="Edit" asp-route-id="@item.Id">
                                <i class="fa fa-edit"></i>
                            </button>
                            <button class="btn btn-danger" onclick="excluirMesa(@item.Id)">
                                <i class="fa fa-trash"></i>
                            </button>
                            <div id="loading" class="spinner-border text-secondary visually-hidden" role="status">
                                <span class="sr-only">Loading...</span>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>