@model Table

@{
    ViewData["Title"] = "View";
}

<div class="row">
    <div class="col-6 d-flex justify-content-start">
        <h4>Editar mesa</h4>
    </div>
    <div class="col-6 d-flex justify-content-end">
        <a class="btn btn-danger" asp-action="Index" asp-route-id="@Model.StoreId">
            Cancelar
        </a>
    </div>
</div>

<hr />

<div class="row">
    <div class="col-md-4 w-100">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="Identifier" class="control-label"></label>
                <input asp-for="Identifier" class="form-control" />
                <span asp-validation-for="Identifier" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="SeatsNumber" class="control-label"></label>
                <input asp-for="SeatsNumber" class="form-control" />
                <span asp-validation-for="SeatsNumber" class="text-danger"></span>
            </div>
            <div class="form-group form-check mb-2">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsAvailable" /> @Html.DisplayNameFor(model => model.IsAvailable)
                </label>
            </div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="StoreId" />
            <div class="form-group">
                <input type="submit" value="Salvar alterações" class="btn btn-primary w-100" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
