@model Models.Entities.Store

@{
    ViewData["Title"] = "Edit";
}


<div class="row">
    <div class="col-6 d-flex justify-content-start">
        <h4>Editar loja</h4>
    </div>
    <div class="col-6 d-flex justify-content-end">
        <a class="btn btn-primary" asp-action="Details" asp-route-id="@Model.Id">
            Voltar
        </a>
    </div>
</div>

<hr />

<div class="row">
    <div class="col-md-4 w-100">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="ImageBase64" class="control-label"></label>
                <input class="form-control" type="file" name="file" />
                <span asp-validation-for="ImageBase64" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UserId" />
            <div class="form-group">
                <input type="submit" value="Salvar Alterações" class="btn btn-primary w-100" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
