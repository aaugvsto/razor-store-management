@model IEnumerable<Table>

@{
    ViewData["Title"] = "TableManagement";
}

<div>
    <a class="btn btn-primary" asp-action="Details" asp-route-id="@ViewData["StoreId"]">
        <i class="fa fa-arrow-left"></i>
        Voltar
    </a>
</div>

<hr />

<div class="row">
    @if (Model.Any())
    {
        @foreach (var item in Model)
        {
            <div class="col-sm-4 col-md-4 col-lg-2">
                <div class="card shadow-sm">
                    <div class="@(!item.IsAvailable ? "bg-danger" : "bg-success") card-img-top" style="height: 16px"></div>
                    <div class="card-body d-flex flex-column gap-4">
                        <span class="card-text">Table Number: @item.Number</span>
                        <span class="card-text">Capacity: @item.SeatsNumber</span>

                        <form method="POST">
                            <input type="hidden" name="@nameof(item.Id)" value="@item.Id" />
                            <input type="hidden" name="@nameof(item.IsAvailable)" value="@(!item.IsAvailable ? "true" : "false")" />
                            <button class="btn btn-primary w-100" type="submit">
                                @("Marcar como " + (item.IsAvailable ? "indisponível" : "disponível"))
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="d-flex justify-content-center">
            <span>Nenhuma mesa cadastrada.</span>
        </div>
    }
</div>
