@page
@model Web.Pages.Table.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Table</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Table.Number" class="control-label"></label>
                <input asp-for="Table.Number" class="form-control" />
                <span asp-validation-for="Table.Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Table.SeatsNumber" class="control-label"></label>
                <input asp-for="Table.SeatsNumber" class="form-control" />
                <span asp-validation-for="Table.SeatsNumber" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Table.IsAvailable" /> @Html.DisplayNameFor(model => model.Table.IsAvailable)
                </label>
            </div>
            <input type="hidden" asp-for="Table.StoreId" class="form-control" />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="../Store/Edit" asp-route-id="@Model.Table.StoreId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
